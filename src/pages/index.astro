---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";
import LogoSnowyBagel from "../components/LogoSnowyBagel.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Snowy Bagel</title>
    <meta
      name="description"
      content="Snowy Bagel â€” tiny, cozy lifestyle apps made with care. Coming soon."
    />

    <!-- Preconnect for fonts loaded via CSS @import -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Set theme ASAP to avoid flash -->
    <script is:inline>
      (() => {
        try {
          const stored = localStorage.getItem("theme");
          const system = window.matchMedia?.("(prefers-color-scheme: dark)").matches ? "dark" : "light";
          document.documentElement.dataset.theme = stored === "light" || stored === "dark" ? stored : system;
        } catch {}
      })();
    </script>
  </head>
  <body>
    <div class="frame">
      <!-- Amplified snow background -->
      <div class="snow-bg" aria-hidden="true"></div>
      <div class="snow-bg-extra" aria-hidden="true"></div>

      <header class="header">
        <div class="container headerRow">
          <ThemeToggle />
        </div>
      </header>

      <main class="main">
        <section class="hero" aria-labelledby="hero-title">
          <!-- Big centered mascot -->
          <div class="mascot">
            <LogoSnowyBagel size={280} />
          </div>

          <div>
            <h1 id="hero-title" class="heroTitle">Snowy Bagel</h1>
            <p class="heroTagline">
              Tiny, cozy lifestyle apps â€” baked slowly with care
            </p>
          </div>
        </section>

        <section class="comingSoon" aria-labelledby="coming-soon-label">
          <span id="coming-soon-label" class="sectionLabel">Coming Soon</span>
          
          <div class="cards">
            <article class="card wiggle">
              <span class="cardBadge">Baking</span>
              <div class="cardIcon">ðŸ¥„</div>
              <h3 class="cardTitle">Spoonful</h3>
              <p class="cardDesc">
                A household chore helper that's mindful of spoon theory â€” matching tasks to your real-life energy and capacity.
              </p>
            </article>

            <article class="card wiggle">
              <span class="cardBadge">Soon</span>
              <div class="cardIcon">âœ¨</div>
              <h3 class="cardTitle">More goodies</h3>
              <p class="cardDesc">
                Small tools for small problems. If you have a delightful niche need, I probably do too!
              </p>
            </article>
          </div>
        </section>
      </main>

      <footer class="footer">
        <div class="footerContent">
          <span>Â© {new Date().getFullYear()} Snowy Bagel</span>
