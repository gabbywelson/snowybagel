---
// Cute theme toggle with sun/moon
---

<button
  id="theme-toggle"
  class="themeToggle wiggle"
  type="button"
  aria-label="Toggle color theme"
  aria-pressed="false"
>
  <span class="themeToggleIcon" aria-hidden="true" data-icon="sun">‚òÄÔ∏è</span>
  <span class="themeToggleIcon" aria-hidden="true" data-icon="moon">üåô</span>
</button>

<style>
  .themeToggle {
    position: relative;
    overflow: hidden;
  }

  .themeToggleIcon {
    transition: opacity 0.2s, transform 0.2s;
  }

  .themeToggleIcon[data-icon="moon"] {
    position: absolute;
    left: 0.85rem;
    opacity: 0;
    transform: translateY(8px) scale(0.8);
  }

  :global([data-theme="dark"]) .themeToggleIcon[data-icon="sun"] {
    opacity: 0;
    transform: translateY(-8px) scale(0.8);
  }

  :global([data-theme="dark"]) .themeToggleIcon[data-icon="moon"] {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
</style>

<script is:inline>
  (() => {
    const STORAGE_KEY = "theme";
    const root = document.documentElement;
    const btn = document.getElementById("theme-toggle");

    const systemPref = () =>
      window.matchMedia?.("(prefers-color-scheme: dark)").matches ? "dark" : "light";

    const getInitialTheme = () => {
      const fromDom = root.dataset.theme;
      if (fromDom === "light" || fromDom === "dark") return fromDom;
      const fromStorage = localStorage.getItem(STORAGE_KEY);
      if (fromStorage === "light" || fromStorage === "dark") return fromStorage;
      return systemPref();
    };

    const applyTheme = (theme) => {
      root.dataset.theme = theme;
      btn?.setAttribute("aria-pressed", theme === "dark" ? "true" : "false");
    };

    applyTheme(getInitialTheme());

    btn?.addEventListener("click", () => {
      const next = root.dataset.theme === "dark" ? "light" : "dark";
      localStorage.setItem(STORAGE_KEY, next);
      applyTheme(next);
    });
  })();
</script>
